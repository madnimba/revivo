<body class="login_body">
    <div class="card">
     
    <div class="text-center errorM"><%=message%></div>

    <div class="text-center center-div" id="login">

        <div class="container ">
            <div class="title pb-3">
                Update My Profile
            </div>
            <form action="/app/myprofile/update" method="POST" >
              
 
            <div class="form-group">
                <input class="form-control" type="text" id="fName" name="fname" value="<%= user.FIRST_NAME %>">
                </div>    
                
                <div class="form-group">
                    <input class="form-control" type="text" id="lName" name="lname" value="<%= user.LAST_NAME %>">
                    </div>   

            <div class="form-group">
                <input class="form-control" type="text" id="email" name="email" value="<%= user.E_MAIL %>">
            </div>

                <div class="form-group">
                    <input class="form-control" type="number" id="phone" name="phone"  value="<%= user.PHONE %>">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" id="phone" name="address"  value="<%= user.ADDRESS %>">
                </div>
            </div>
            <button type="submit" class="btn btn-success rounded-5">Update Profile</button>
            
            </form>
            <div>
            <h2><%=message%></h2>
        </div>
    
        <a href="/app/myprofile"><button type="submit" class="btn btn-success rounded-5">Go Back</button></a>
    </div>
</div>
</div>
</div>



